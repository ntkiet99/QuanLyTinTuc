@model QuanLyTinTuc.Models.TinTuc
@{ 
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.TieuDe</title>
    <link rel="stylesheet" href="fontawesome/css/all.min.css"> <!-- https://fontawesome.com/ -->
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet"> <!-- https://fonts.google.com/ -->
    <link href="~/fe/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/fe/css/templatemo-xtra-blog.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <main class="container">
            <div class="row">
                <div class="col-12">
                   <img src="@Model.HinhAnh" />
                </div>
            </div>
            <div class="row ">
                <div class="col-lg-12 tm-post-col">
                    <div class="">
                        <div class="mb-4">
                            <h2 class="pt-2 tm-color-primary tm-post-title">@Model.TieuDe</h2>
                            <p class="tm-mb-40">@Model.NgayDang.ToString("dd/MM/yyy hh:mm")</p>
                            @Html.Raw(Model.NoiDung)
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script src="~/fe/js/jquery.min.js"></script>
    <script src="~/fe/js/templatemo-script.js"></script>
</body>
</html>