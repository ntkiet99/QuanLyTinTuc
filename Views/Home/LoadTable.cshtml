@model List<QuanLyTinTuc.Models.TinTuc>
@{
    Layout = null;
    int index = 1;
}
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th> Hình ảnh </th>
            <th> Tiêu đề </th>
            <th> Mô tả </th>
            @*<th> Nội dung </th>*@
            <th> Ngày đăng </th>
            <th style="width:100px; min-width:100px;"> &nbsp; </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@index</td>
                <td>
                    <img src="@item.HinhAnh" width="100" />
                </td>
                <td>@item.TieuDe</td>
                <td>@item.MoTa</td>
                <td>@item.NgayDang.ToShortDateString()</td>
                <td class="align-middle text-right">
                    @{
                        var uEdit = Url.Action("AddOrUpdate", "Home") + "/" + item.Id;
                        var urlEdit = @"Popup('" + uEdit + "')";
                        var uDelete = Url.Action("Delete", "Home") + "/" + item.Id;
                        var urluDelete = @"Delete('" + uDelete + "')";
                        index++;
                    }
                    <a href="/Home/AddOrUpdate/@item.Id" class="btn btn-sm btn-icon btn-secondary"><i class="fa fa-pencil-alt"></i> <span class="sr-only">Sửa</span></a>
                    <a href="#" onclick="@urluDelete" class="btn btn-sm btn-icon btn-secondary"><i class="far fa-trash-alt"></i> <span class="sr-only">Xóa</span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
